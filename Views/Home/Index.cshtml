@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>@ViewBag.Conectado</h1>
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <a class="btn btn-info" href="@Url.ActionLink("Add_Users","Home")">Add Users</a>
    <a class="btn btn-success" href="@Url.ActionLink("Reload","Home")">Select Users</a>

    @{
        if (ViewBag.DataDB != null)
        {
            <h1 class="alert-success">@ViewBag.DataDB</h1>
        }
    }
</div>

<br />
<hr />
<br />

<div>
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Upload">
        <div class="form-group">
            <div class="col-md-10">
                <p>Seleccione un archivo para cargar:</p>
                <input type="file" name="files"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>
</div>
